<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Landing Page for Dwayne Gibbs.">
    <meta name="author" content="Dwayne Gibbs">
    @*<link rel="icon" href="../../../../favicon.ico">*@

    <title>@ViewBag.Title - Landing Hub</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/cover.css" rel="stylesheet" />
</head>
<body class="text-center">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <header class="masthead mb-auto">
            <div class="inner">
                <h3 class="masthead-brand">Dwayne Gibbs</h3>
                <nav class="nav nav-masthead justify-content-center">
                    <a class="nav-link @ViewBag.IsHomeActive" href='@Url.Action("Index", "LandingHub")'>Home</a>
                    <a class="nav-link @ViewBag.IsProjectsActive" href='@Url.Action("Index", "Projects")'>Projects</a>
                    <a class="nav-link @ViewBag.IsContactActive" href='@Url.Action("Index", "Contact")'>Contact</a>
                </nav>
            </div>
        </header>

        @RenderBody()
      
        <footer class="mastfoot mt-auto">
            <div class="inner">
            <p>&copy; @DateTime.Now.Year - My Landing Hub ASP.NET Application with Bootstrap</p>
        </div>
      </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    @*<script src="~/Scripts/popper.min.js"></script>*@
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        
    </script>
</body>
</html>